{
  "tasks": {
    "dev": "deno run -A --watch src/mod.ts",
    "start": "deno run -A src/mod.ts",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "prisma:generate": "deno run -A npm:prisma@latest generate",
    "prisma:push": "deno run -A npm:prisma@latest db push",
    "prisma:migrate": "deno run -A npm:prisma@latest migrate dev",
    "prisma:studio": "deno run -A npm:prisma@latest studio"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "compilerOptions": {
    "lib": ["deno.window", "dom", "esnext"],
    "strict": true
  },
  "imports": {
    "@prisma/client/runtime/library": "npm:@prisma/client/runtime/library"
  },
  "nodeModulesDir": "auto"
}
